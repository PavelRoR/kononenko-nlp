#main
	width 100%
	padding 0 0 70px
	background-color: #551164
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	overflow hidden
	text-align: center
.pre
	color #fff
	margin-top: 30px
.main_title
	font-size: 32px;
	color: rgb(255, 255, 255);
	line-height: 1.3
	margin 20px 0
	a
		display: inline-block
		border-bottom: 1px dashed
		&:focus
			color #ffffff
			text-decoration: none
		&:hover
			border-bottom: none
			color #fff
.main_subtitle
	font-size: 25px;
	color: rgb(255, 255, 255);
	text-align: center
	margin 55px 0 0
.video_wrapper_main
	max-width 560px
	box-shadow: 0px 8px 23px 0px rgba(0, 0, 0, 0.17);
#main.remind
	min-height calc(100vh - 203px)