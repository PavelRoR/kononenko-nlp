#plan
	width 100%
	padding 70px 0
	background-color: #000B22
	background-image url(../img/plan_bg.png)
	background-repeat no-repeat
	background-position: bottom 0 left 150%
	background-size 1010px
.days
	width 100%
	max-width 770px
.day
	width 100%
	display: table
	color #fff
	// margin-bottom: 45px
.day_number
	display: table-cell
	vertical-align: middle
	font-size: 240px
	width 30%
	font-family: "Merriweather", serif
	line-height: 1
.day_description
	width 70%
	display: table-cell
	vertical-align: middle
.day_description_title
	font-size: 25px
	margin-bottom: 30px
.day_list
	list-style: none
	li
		line-height: 1.56
.plan_aftertitle
	text-align: center
	width 100%
	max-width 800px
	margin 45px auto
	font-size: 30px
	color #fff
	span
		text-transform: uppercase
		display: inline-block
		text-decoration: underline