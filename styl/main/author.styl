#author
	width 100%
	padding 70px 0
	background-color: #EAEAEA
	background-image url(../img/about_bg.jpg)
	background-repeat no-repeat
	background-position: center bottom
	background-size: cover
	overflow hidden
	.container
		position relative
		z-index 12
.general_title_author
	color #000
#olga
	display block
	width: 580px
	// height 868px
	position: absolute
	bottom: -70px
	left 0
	z-index -1
.author_list
	margin: 30px 0 60px
	li
		margin-bottom: 40px
		list-style: none
		&:last-child
			margin-bottom: 0
.author_blockquote
	background-color: rgb(120,7,88)
	background-image: linear-gradient( 0deg, rgb(120,7,88) 0%, rgb(62,26,114) 100%);
	box-shadow: 0px 2px 23.22px 3.78px rgba(0, 0, 0, 0.5);
	width 100%
	max-width: 913px;
	padding 30px 40px
	float right
	p
		color #fff
		line-height: 1.56
		&:first-child
			margin-bottom: 35px
#certs
	width 100%
	padding 70px 0
	background-color: #2E0733
	background-image: url(../img/certs_bg.jpg)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
.owl-carousel
	padding-top: 90px
.owl-carousel .owl-nav
	position: absolute
	top 0
	right 0
	[class*="owl-"]
		width 60px
		height 60px
		// line-height 40px
		padding 7px 0
		text-align: center
		font-size: 30px
		color #2F76D8
		text-shadow: 0 0 1px #fff
		background-color: transparent
		border-radius: 50%
		border: 2px solid #fff
		transition: all .3s ease
		&:hover
			background-color: #2F76D8
			color #fff
.certs_container_img
	height 190px
	object-fit: contain
	object-position: center